# .env file for SUPRSS application
# This file contains environment variables for configuring the SUPRSS application.

# ========================================
# DATABASE CONFIGURATION
# ========================================
POSTGRES_DB=suprss
POSTGRES_USER=suprss_admin
POSTGRES_PASS=Medium_password
POSTGRES_HOST=suprss-db.postgres.database.azure.com
POSTGRES_PORT=5432

# ========================================
# REDIS CONFIGURATION
# ========================================
REDIS_PASSWORD=redis_secure_password_2024
REDIS_HOST=redis
REDIS_PORT=6379

# ========================================
# SECURITY CONFIGURATION
# ========================================
SECRET_KEY=your-super-secret-key-change-this-in-production-must-be-32-chars-minimum
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ========================================
# OAUTH2 CONFIGURATION
# ========================================
# Google OAuth2
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth2
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Microsoft OAuth2
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret

# ========================================
# EMAIL CONFIGURATION
# ========================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# FROM_EMAIL=noreply@suprss.com
# FROM_NAME=SUPRSS

# ========================================
# APPLICATION CONFIGURATION
# ========================================
APP_NAME=SUPRSS
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Base URLs
BACKEND_URL=http://localhost:8000
# FRONTEND_URL=http://localhost:3000

# ========================================
# RSS CONFIGURATION
# ========================================
RSS_FETCH_TIMEOUT=30
RSS_MAX_ARTICLES_PER_FEED=1000
RSS_DEFAULT_UPDATE_INTERVAL=60
RSS_MAX_CONCURRENT_FETCHES=10
RSS_USER_AGENT=SUPRSS/1.0 (+https://your-domain.com)

# ========================================
# FILE UPLOAD CONFIGURATION
# ========================================
MAX_FILE_SIZE=10MB
ALLOWED_EXTENSIONS=opml,xml,json,csv
UPLOAD_FOLDER=uploads

# ========================================
# RATE LIMITING
# ========================================
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ========================================
# LOGGING CONFIGURATION
# ========================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/app.log

# ========================================
# CELERY CONFIGURATION
# ========================================
CELERY_BROKER_URL=redis://:redis_secure_password_2024@redis:6379/0
CELERY_RESULT_BACKEND=redis://:redis_secure_password_2024@redis:6379/0
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_TIMEZONE=UTC

# ========================================
# MONITORING CONFIGURATION
# ========================================
GRAFANA_PASSWORD=admin_secure_password
PROMETHEUS_ENABLED=False

# ========================================
# AZURE CONFIGURATION (Production)
# ========================================
# Azure Database for PostgreSQL
# AZURE_DB_HOST=your-server.postgres.database.azure.com
# AZURE_DB_NAME=suprss
# AZURE_DB_USER=suprss_admin
# AZURE_DB_PASSWORD=your-azure-db-password
# AZURE_DB_SSL_MODE=require

# Azure Redis Cache
# AZURE_REDIS_HOST=your-redis.redis.cache.windows.net
# AZURE_REDIS_PORT=6380
# AZURE_REDIS_PASSWORD=your-azure-redis-password
# AZURE_REDIS_SSL=True

# Azure Storage
# AZURE_STORAGE_ACCOUNT=your-storage-account
# AZURE_STORAGE_KEY=your-storage-key
# AZURE_STORAGE_CONTAINER=suprss-files

# ========================================
# FRONTEND CONFIGURATION
# ========================================
# VITE_API_URL=http://localhost:8000
# VITE_WS_URL=ws://localhost:8000
# VITE_APP_NAME=SUPRSS
# VITE_APP_VERSION=1.0.0
# VITE_GOOGLE_CLIENT_ID=your-google-client-id
# VITE_GITHUB_CLIENT_ID=your-github-client-id
# VITE_MICROSOFT_CLIENT_ID=your-microsoft-client-id

# ========================================
# DEVELOPMENT CONFIGURATION
# ========================================
DEV_MODE=True
DEV_RELOAD=True
DEV_PORT=8000
DEV_HOST=0.0.0.0

# ========================================
# TESTING CONFIGURATION
# ========================================
# TEST_DATABASE_URL=postgresql://suprss_user:suprss_secure_password_2024@postgres:5432/suprss_test
TEST_REDIS_URL=redis://:redis_secure_password_2024@redis:6379/1

# ========================================
# SECURITY HEADERS
# ========================================
SECURE_HEADERS_ENABLED=True
CONTENT_SECURITY_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'"
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff